    name = "color",
    submodules = [
        ":_Color", ## user-provided main module
        ":_Red",
        ":_Green",
        ":_Blue"
    ],
    visibility = ["//visibility:public"],
)

ocaml_module(
    name = "_Color",
    struct = "color.ml",
)

ocaml_module(
    name = "_Red",
    struct = "red.ml",
)

