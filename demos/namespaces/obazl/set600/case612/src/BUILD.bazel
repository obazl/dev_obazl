ocaml_ns_library(
    name = "alpha",
    submodules = [
        ":_Ared",
        ":_Agreen",
        ":_Ablue",
        ":beta"  # nslib as submodule
    ],
    visibility = ["//visibility:public"],
)

ocaml_module(
    name = "_Ared",
    struct = "ared.ml",
)

ocaml_module(
    name = "_Agreen",
    struct = "agreen.ml",
)

ocaml_module(
    name = "_Ablue",
    struct = "ablue.ml",
)

#################
ocaml_ns_library(
    name = "beta",
    submodules = [
        ":_Bred",
        ":_Bgreen",
        ":_Bblue",
        ":gamma"   # nslib as submodule
    ],
)

ocaml_module(
    name = "_Bred",
    struct = "bred.ml",
)

ocaml_module(
    name = "_Bgreen",
    struct = "bgreen.ml",
)

ocaml_module(
    name = "_Bblue",
    struct = "bblue.ml",
)

