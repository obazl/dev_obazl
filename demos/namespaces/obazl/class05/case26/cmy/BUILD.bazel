load(
    "@obazl_rules_ocaml//ocaml:rules.bzl",
    "ocaml_module",
    "ocaml_ns_module",
)
load("@obazl_rules_ocaml//ocaml:macros.bzl", "ns_env")

ns_env(
    aliases = glob(["*.ml"]),
)

ocaml_ns_module(
    name = "cmy",
    submodules = {
        ":_Cyan": "Cyan",
        ":_Magenta": "Magenta",
        ":_Yellow": "Yellow",
    },
    visibility = ["//visibility:public"],
)

ocaml_module(
    name = "_Cyan",
    prefix = ":_ns_env",
    struct = "cyan.ml",
    deps = [":_Magenta"],
)

ocaml_module(
    name = "_Magenta",
    prefix = ":_ns_env",
    struct = "magenta.ml",
)

ocaml_module(
    name = "_Yellow",
    prefix = ":_ns_env",
    struct = "yellow.ml",
)
