load(
    "@obazl_rules_ocaml//ocaml:rules.bzl",
    "ocaml_archive",
    "ocaml_library",
    "ocaml_module",
    "ocaml_ns_module",
    "ocaml_test",
)
load("@obazl_rules_ocaml//ocaml:macros.bzl", "ns_env")

# here we change the label from ":_ns_resolver" to ":pkg_ns",
# used in the 'ns' attrib of ocaml_module rules below.
ns_env(name = "pkg_ns")

ocaml_test(
    name = "test",
    main = "test.ml",
    opts = [
        "-w",
        "-27",  ## Error (warning 27): unused variable test_ctxt.
    ],
    deps = [
        ":a",
        "@opam//pkg:ounit2",
    ],
)

# How to support articulated module paths like A.B.Color
ocaml_ns_module(
    name = "a",
    # footer = "a_footer.ml",
    submodules = {
        # ":foo": "Foo", ## 'regular' submodule
        ":b": "B",  ## ns submodule
    },
)

ocaml_ns_module(
    name = "b",
    footer = "b_footer.ml",
    submodules = {
        ":_Bar": "Bar",  ## 'regular' submodule
        ":color": "Color",  ## ns submodule
    },
)

## This module will be accessible directly as 'Color', or indirectly as 'A.Color'
## But since it has private visibility by default, clients outside of this package
## cannot depend on it directly.
ocaml_ns_module(
    name = "color",
    footer = "color_footer.ml",
    submodules = {
        ":_Red": "Red",
        ":_Green": "Green",
        ":_Blue": "Blue",
    },
)

ocaml_module(
    name = "_Red",
    prefix = ":pkg_ns",
    struct = "red.ml",
)

ocaml_module(
    name = "_Green",
    prefix = ":pkg_ns",
    struct = "green.ml",
)

ocaml_module(
    name = "_Blue",
    prefix = ":pkg_ns",
    struct = "blue.ml",
)

ocaml_module(
    name = "_Bar",
    prefix = ":pkg_ns",
    struct = "bar.ml",
)
