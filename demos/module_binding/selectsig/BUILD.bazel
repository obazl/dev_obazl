load("@bazel_skylib//rules:common_settings.bzl", "string_flag")

# by default sig red is bound. to select another pass:
#  --//module_binding/fixedstruct:sig=green    (or blue)
string_flag(
    name   = "sig",
    values = ["red", "green", "blue"],
    build_setting_default = "red"
)

config_setting(
    name = "red",
    # constraint_values = ["@platforms//os:linux"],
    flag_values = {":sig": "red"}
)

config_setting(
    name = "green",
    flag_values = {":sig": "green"}
)

config_setting(
    name = "blue",
    flag_values = {":sig": "blue"}
)

load(
    "@rules_ocaml//build:rules.bzl",
    "ocaml_module",
    "ocaml_signature",
    "ocaml_test",
)

ocaml_test(
    name = "test",
    main = "Test"
)

ocaml_module(
    name   = "Test",
    struct = select({
        ":red":   ":testred.ml",
        ":green": ":testgreen.ml",
        ":blue":  ":testblue.ml",
    }),
    opts = ["-w", "-27"],  ## Error (warning 27): unused variable test_ctxt.
    deps = [
        ":A",
        "@ounit2//:ounit2"
    ],
)

ocaml_module(
    name   = "A",
    ## ignore Error (warning 32 [unused-value-declaration]): unused value red.
    opts   = ["-w", "-32"],
    ## fix struct
    struct = "a.ml",
    ## vary sig
    sig    = select({
        ":red": "//module_binding/fixedstruct/red:a.mli",
        ":green": "//module_binding/fixedstruct/green:a.mli",
        ":blue": "//module_binding/fixedstruct/blue:a.mli",
    }, no_match_error = "unsupported arch"),
)

