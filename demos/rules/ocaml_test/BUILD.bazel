# run all tests: $ bazel test rules/ocaml_test:test
# run one test : $ bazel test rules/ocaml_test:hello_alcotest

load(
    "@obazl_rules_ocaml//ocaml:rules.bzl",
    "ocaml_executable",
    "ocaml_module",
    "ocaml_test",
    "ppx_executable",
    "ppx_module",
)

test_suite(
    name = "test",
    tests = [
        "hello_alcotest",
        "hello_ounit2",
        "hello_ppx_test",
    ],
)

ocaml_test(
    name = "hello_alcotest",
    main = "test_alcotest.ml",
    deps = [
        "//rules/ocaml_module:Hello",
        "@ocaml//lib/alcotest",
    ],
)

ocaml_test(
    name = "hello_ounit2",
    main = "test_ounit2.ml",
    opts = [
        "-w",
        "-27",
    ],  ## Error (warning 27): unused variable test_ctxt.
    deps = [
        "@ounit2//:ounit2",
        ## Notice we're using a module from a different package:
        "//rules/ocaml_module:Hello",
        # ":_Hello"
    ],
)

## For ppx_inline_test we need to use the ppx_executable the transform
## the source file, and we need to run
## `Ppx_inline_test_lib.Runtime.exit ()` last.
ocaml_test(
    name = "hello_ppx_test",
    args = [
        "inline-test-runner",
        "hello",
    ],
    main = "runner.ml",  ## contains Ppx_inline_test_lib.Runtime.exit (); obazl puts 'main' last
    deps = [
        ":_Test_ppx_inline",  # the transformed and compiled test code
        "@ocaml//lib/ppx_inline_test/runner/lib",
    ],
)

ocaml_module(
    name = "_Test_ppx_inline",
    ppx = ":ppx_inline_test",
    ppx_args = [
        "-inline-test-lib",
        "hello",
    ],
    ppx_print = "@ppx//print:text",
    struct = "test_ppx_inline.ml",
    deps = [
        "@ocaml//lib/core",
        # "@ocaml//lib/ppx_inline_test.runtime-lib",  ## not needed - listed as adjunct on the ppx executable
        # "//rules/ocaml_module:Hello"
        ":_Hello",
    ],
)

ocaml_module(
    name = "_Hello",
    ppx = ":ppx_inline_test",
    ppx_args = [
        "-inline-test-lib",
        "hello",
    ],
    struct = "hello.ml",
    deps = [
        "@ocaml//lib/core",
        # "@ocaml//lib/ppx_inline_test.runtime-lib",  ## not needed - listed as adjunct on the ppx executable
        # "//rules/ocaml_module:Hello"
    ],
)

