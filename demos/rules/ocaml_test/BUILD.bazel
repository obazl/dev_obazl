ppx_executable(
    name = "ppx_inline_test",
    main = ":Driver",
    opts = [],
    deps = [
        "@ocaml//lib/ppx_inline_test",
        # "@ppxlib//:ppxlib",
    ],
    ppx_codeps = [
        "@ocaml//lib/ppx_inline_test.runtime-lib",
    ]
)

###########
ppx_module(
    name = "Driver",
    struct = ":ppxlib_driver.ml",
    visibility = ["//visibility:public"],
    deps = ["@ppxlib//:ppxlib"],
)

########
genrule(
    name = "gendriver",
    outs = ["ppxlib_driver.ml"],
    cmd = "\n".join([
        "echo \"(* GENERATED FILE - DO NOT EDIT *)\" > \"$@\"",
        "echo \"let () = Ppxlib.Driver.standalone ()\" >> \"$@\"",
    ]),
)
