load(
    "@obazl_rules_ocaml//ocaml:rules.bzl",
    "ocaml_archive",
    "ocaml_executable",
    "ocaml_module",
    "ocaml_test",
)

# $ bazel test //minimal/hello_archive:test
ocaml_test(
    name = "test",
    main = "_Test"
)

# $ bazel run minimal/hello_archive:hello
ocaml_executable(
    name = "hello",
    main = ":main",
    # deps = [":main"]
)

ocaml_module(
    name   = "_Test",
    struct = "test.ml",
    opts = ["-w", "-27"],  ## Error (warning 27): unused variable test_ctxt.
    deps = [
        ":main",
        "@ounit2//:ounit2"
    ],
)

ocaml_module(
    name = "main",
    struct = "main.ml",
    deps = [":archive"],
)

ocaml_archive(
    name = "archive",
    modules = [":easy", ":simple"],
)

ocaml_module(
    name = "easy",
    struct = "easy.ml",
)

ocaml_module(
    name = "simple",
    struct = "simple.ml",
)

